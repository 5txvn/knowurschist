{
  "Group 1A (Alkali Metals)": "$+1$",
  "Group 2A (Alkaline Earth Metals)": "$+2$",
  "Group 3A": "$+3$",
  "Group 5A (Nitrogen group)": "$-3$",
  "Group 6A (Oxygen group)": "$-2$",
  "Group 7A (Halogens)": "$-1$",
  "Group 8A (Noble Gases)": "$0$ (typically do not form ions)",
  "Aluminum": "$Al^{3+}$",
  "Zinc": "$Zn^{2+}$",
  "Silver": "$Ag^+$",
  "Cadmium": "$Cd^{2+}$",
  "Lead": "$Pb^{2+}$ or $Pb^{4+}$",
  "Tin": "$Sn^{2+}$ or $Sn^{4+}$",
  "Iron (II)": "$Fe^{2+}$",
  "Iron (III)": "$Fe^{3+}$",
  "Copper (I)": "$Cu^+$",
  "Copper (II)": "$Cu^{2+}$",
  "Mercury (I)": "$Hg_2^{2+}$",
  "Mercury (II)": "$Hg^{2+}$",
  "Chromium (II)": "$Cr^{2+}$",
  "Chromium (III)": "$Cr^{3+}$",
  "Manganese (II)": "$Mn^{2+}$",
  "Manganese (IV)": "$Mn^{4+}$",
  "Cobalt (II)": "$Co^{2+}$",
  "Cobalt (III)": "$Co^{3+}$",
  "Nickel (II)": "$Ni^{2+}$",
  "Ammonium": "$NH_4^+$",
  "Hydroxide": "$OH^-$",
  "Cyanide": "$CN^-$",
  "Acetate": "$C_2H_3O_2^-$ or $CH_3COO^-$",
  "Nitrate": "$NO_3^-$",
  "Nitrite": "$NO_2^-$",
  "Sulfate": "$SO_4^{2-}$",
  "Sulfite": "$SO_3^{2-}$",
  "Carbonate": "$CO_3^{2-}$",
  "Bicarbonate": "$HCO_3^-$",
  "Phosphate": "$PO_4^{3-}$",
  "Phosphite": "$PO_3^{3-}$",
  "Chlorate": "$ClO_3^-$",
  "Chlorite": "$ClO_2^-$",
  "Hypochlorite": "$ClO^-$",
  "Perchlorate": "$ClO_4^-$",
  "Permanganate": "$MnO_4^-$",
  "Chromate": "$CrO_4^{2-}$",
  "Dichromate": "$Cr_2O_7^{2-}$",
  "Oxalate": "$C_2O_4^{2-}$"
}
